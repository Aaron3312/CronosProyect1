<%- layout('layout/main') %>
<div class="formulario">
    <h1>Register</h1>
    <form action="/signup" method="post">
        <div class="form">
            <div class="form-group">
                <input type="text" name="name" placeholder="Full name" required>
                <label>User name</label>
            </div>
            <div class="form-group">
                <input type="email" name="email" placeholder="Your email" required>
                <label>Your E-mail</label>
            </div>
            <div class="form-group">
                <input type="password" name="password" placeholder="Your password (needs to be at least 8 characters)" required>
                <label>Password</label>
            </div>
            <div class="form-group">
                <input type="password" id="password2" name="password2" placeholder="Confirm Password (needs to be at least 8 characters)" required>
                <label>Confirm Password</label>
            </div>
        </div>
        <!-- <div class="Ol">
            <a href="#">Olvido su contrase√±a</a>
        </div> -->
        <div class="Login">
            <button type="submit">Signup</button>
        </div>
        <div class="Login">
            <div class="Log">
                Do you have an account? <a href="/signin">Login</a>
            </div>
            <div class="Log">
                Don't know what is Cronos? <a href="/what_is_cronos">What is Cronos?</a>
            </div>
        </div>
    </form>
    <ul>
        <% if (typeof errors != 'undefined') { %>
        <% errors.forEach(error => { %>
        <li><%= error.message %></li>
        <% }) %>
        <% } %>
    </ul>
</div>
